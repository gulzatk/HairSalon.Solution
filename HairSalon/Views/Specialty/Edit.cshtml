@{
  Layout = "_Layout";
}

<div class="container">
  <h2>Edit Specialty</h2>
  <form action="/specialties/@Model.GetId()/edit" method="post">
    <label for="name"> Name: </label>
    <input type="text" name="name" value='@Model.GetName()'>
    <br>
    <br>
    <button type="submit" class="btn btn-primary">Submit</button>
  </form>
  <br>

  <h4><a href = "/specialties">Return to Specialties</a></h4>
</div>
