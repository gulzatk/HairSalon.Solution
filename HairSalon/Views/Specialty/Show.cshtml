@{
Layout = "_Layout";
}

<div class ="controller text-center">
<h1>Specialties</h1>
<h2> @Model["selectedSpecialty"].GetName()</h2>

<hr />

@if (@Model["specialtyStylist"].Count == 0)
{
  <h4>List of stylists with this specialty:</h4>
} else {
  <ul>
    @foreach (var stylist in @Model["specialtyStylist"])
    {
      <li>@stylist.GetName()</li>
    }
  </ul>
}

<h4>Add a stylist to this specialty:</h4>

<form action='/specialties/@Model["selectedSpecialty"].GetId()/stylists/new' method='post'>
  <label for='stylistId'>Select a stylist</label>
  <select id='stylistId' name='stylistId' type='text'>
    @foreach (var stylist in @Model["allStylists"])
    {
      <option value='@stylist.GetId()'>@stylist.GetName()</option>
    }
  </select>
  <button type='submit' class='btn btn-info'>Add</button>
</form><br>
<p><a href='/stylists/new'>Add a new stylist</a></p>
<p><a href="/">Return to Main Page</a></p>
