@{
  Layout = "_Layout";
}

<div class="container text-center">

  <h3>List of Specialties in our HairSalon:</h3>

  @if (@Model.Count == 0)
  {
    <h3>No specialty exist!</h3>
  }

  @foreach (var specialty in Model)
  {
    <h4><a href='/specialties/@specialty.GetId()'>@specialty.GetName()</a></h4>
    <button class="btn btn-danger"><a href='/specialties/@specialty.GetId()/delete'>Delete</a></button>
    <button class="btn btn-info"><a href='/specialties/@specialty.GetId()/edit'>Edit</a></button>
    <br>
    <br>
  }
  <br>
  <h4><a href='/specialties/new'>Add a new specialty</a></h4>
  <h4><a href='/specialties/delete'>Delete all specialties</a></h4>
</div>
