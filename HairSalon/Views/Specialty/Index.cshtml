@{
  Layout = "_Layout";
}

<div class="container text-center">

  <h1>List of Specialties in our HairSalon:</h1>

  @if (@Model.Count == 0)
  {
    <h3>No specialty exist!</h3>
  }

  @foreach (var specialty in Model)
  {
    <h3><a href='/specialties/@specialty.GetId()'>@specialty.GetName()</a></h3>
    <button class="btn btn-danger"><a href='/specialties/@specialty.GetId()/delete'>Delete</a></button>
    <button class="btn btn-info"><a href='/specialties/@specialty.GetId()/edit'>Edit</a></button>
    <br>
  }
  <br>
  <p><a href='/specialties/new'>Add a new specialty</a></p><br>
  <p><a href='/'>Home Page</a></p>
</div>
