@{
  Layout = "_Layout";
}

<div class="container text-center">
  <h2>Stylists of our Hair Salon:</h2>
  @if (@Model.Count == 0)
  {
    <h3>No stylists exist!</h3>
  }
  <ul>
  @foreach (var stylist in Model)
  {
    <h4><a href='/stylists/@stylist.GetId()'>@stylist.GetName()</a></h4>
    <button class="btn btn-danger"><a href='/stylists/@stylist.GetId()/delete'>Delete</a></button>
    <button class="btn btn-info"><a href='/stylists/@stylist.GetId()/edit'>Edit</a></button>
    <br>
    <br>
  }
  </ul>
  <h4><a href='/stylists/new'>Add a new stylist</a></h4>
  <h4><a href='/stylists/delete'>Delete all stylists</a></h4>
  <h4><a href='/'>Home Page</a></h4>
</div>
